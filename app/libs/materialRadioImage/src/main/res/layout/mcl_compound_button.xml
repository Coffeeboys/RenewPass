<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:gravity="center"
    android:layout_height="wrap_content">

    <net.soulwolf.widget.materialradio.widget.MaterialStateButton
        android:id="@+id/mci_compound_button_image"
        android:layout_width="wrap_content"
        android:clickable="true"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/mci_compound_button_padding"
        android:layout_width="3dp"
        android:layout_height="0dp"/>

    <net.soulwolf.widget.materialradio.widget.MaterialStateText
        android:id="@+id/mci_compound_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
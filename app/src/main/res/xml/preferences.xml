<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/preference_header_general">

        <EditTextPreference
            android:key="Username"
            android:title="@string/preference_username"
            android:summary="@string/preference_username_description"
            android:dialogTitle="@string/preference_username"
            android:inputType="text"/>

        <EditTextPreference
            android:key="Password"
            android:title="@string/preference_password"
            android:summary="@string/preference_password_description"
            android:dialogTitle="@string/preference_password"
            android:inputType="textWebPassword"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/preference_header_notifications">

        <CheckBoxPreference
            android:key="NotificationsEnabled"
            android:title="@string/preference_notificationsenabled_title"
            android:summary="@string/preference_notificationsenabled_description"/>

        <ca.alexland.renewpass.DatePreference
            android:key="NotificationDate"
            android:dependency="NotificationsEnabled"
            android:title="@string/preference_notificationdate_title"
            android:defaultValue="2016-01-21"
            android:summary="@string/preference_notificationdate_description"/>

    </PreferenceCategory>

</PreferenceScreen>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:soulwolf="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/IntroStyle"
    android:padding="16dip">

    <android.widget.TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:padding="@dimen/activity_vertical_margin"
        android:text="@string/enter_credentials_prompt"
        android:id="@+id/start_description_text" />


    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="7dip">
        <EditText
            android:id="@+id/username_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorAccent"
            android:hint="@string/username_hint"/>
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="7dip">
        <EditText
            android:id="@+id/password_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorAccent"
            android:inputType="textPassword"
            android:hint="@string/password_hint"/>
    </android.support.design.widget.TextInputLayout>

    <android.widget.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/school_select"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:padding="10dip"
        android:id="@+id/school_selection_text"
        android:layout_gravity="center_horizontal" />

    <net.soulwolf.widget.materialradio.MaterialRadioGroup
        android:id="@+id/school_radio_group"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="25dip"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <net.soulwolf.widget.materialradio.MaterialRadioButton
            android:id="@+id/rb_ubc"
            android:layout_width="100dip"
            android:layout_height="100dip"
            soulwolf:mcTextSize="14sp"
            soulwolf:mcText="UBC"
            soulwolf:mcPadding="5dp"
            soulwolf:mcChecked="false"
            soulwolf:mcAnimator="true"
            soulwolf:mcTextColor="@drawable/radio_button_text_selector"
            soulwolf:mcButton="@drawable/ubc_button_selector"/>

        <net.soulwolf.widget.materialradio.MaterialRadioButton
            android:id="@+id/rb_sfu"
            android:layout_margin="10dip"
            android:layout_width="100dip"
            android:layout_height="100dip"
            soulwolf:mcTextSize="14sp"
            soulwolf:mcPadding="5dp"
            soulwolf:mcChecked="false"
            soulwolf:mcAnimator="true"
            soulwolf:mcText="SFU"
            soulwolf:mcTextColor="@drawable/radio_button_text_selector"
            soulwolf:mcButton="@drawable/sfu_button_selector"/>

    </net.soulwolf.widget.materialradio.MaterialRadioGroup>


</LinearLayout>